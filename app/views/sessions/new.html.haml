.ui.form.segment
  = form_for(@user_name_form, url: sessions_path) do |f|
    - if @user_name_form.errors.any?
      #error_explanation
        %h2
          = pluralize(@user_name_form.errors.count, "error")
          prohibited this room from being saved:
        %ul
          - @user_name_form.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :name
      .ui.left.labeled.icon.input
        = f.text_field :name, autofocus: true
        %i.user.icon
        .ui.corner.label
          %i.icon.asterisk
    = f.submit 'Enter', class: 'ui blue submit button'
