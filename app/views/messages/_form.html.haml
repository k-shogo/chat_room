.ui.form.segment
  = form_for([@room, @message], remote: true) do |f|
    - if @message.errors.any?
      #error_explanation
        %h2
          = pluralize(@message.errors.count, "error")
          prohibited this message from being saved:
        %ul
          - @message.errors.full_messages.each do |message|
            %li= message
    .field
      = f.hidden_field :room_id
      = f.label :body
      = f.text_field :body, autofocus: true
    = f.submit 'submit', class: 'ui green submit button'
