= form_for([@room, @message]) do |f|
  - if @message.errors.any?
    #error_explanation
      %h2
        = pluralize(@message.errors.count, "error")
        prohibited this message from being saved:
      %ul
        - @message.errors.full_messages.each do |message|
          %li= message
  .field
    = f.hidden_field :room_id
    = f.label :body
    %br/
    = f.text_field :body
  .actions
    = f.submit
